@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuarios";
}
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" asp-controller="Usuarios" asp-action="Criar">Adicionar novo usuario</a>
</div>
<br />

@if (TempData["okMsg"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["okMsg"]
    </div>
}

@if (TempData["erroMsg"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["erroMsg"]
    </div>
}
<br />

<div class="text-center">
    <h1>Listagem de usuarios</h1>
    <br />
</div>


<table class="table table-striped" id="table-usuarios" style="width:100%">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Login</th>
            <th scope="col">Data do Cadastro</th>
            <th scope="col">Perfil</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (UsuarioModel usuario in Model)
            {
                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.Name</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.DataCriacao</td>
                    <td>@usuario.Perfil</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Usuarios" asp-action="Editar" role="button" asp-route-id="@usuario.Id" class="btn btn-outline-primary">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-controller="Usuarios" asp-action="ConfirmarExclusao" asp-route-id="@usuario.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>