@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contatos" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Digite o email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputPassword1" placeholder="Digite o nome">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Telefone" class="form-label">Telefone</label>
        <input type="tel" asp-for="Phone" class="form-control" id="exampleInputPassword1" placeholder="Digite o telefone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Editar</button>
    <a class="btn btn-outline-secondary" asp-controller="Contatos" asp-action="Index" role="button">Voltar</a>
</form>